@inject IOptions<SystemConfig> _config;
@using Microsoft.AspNetCore.Identity
@using BlogCMS.Core.Domain.Identity
@using BlogCMS.WebApp.Extensions
@inject SignInManager<AppUser> SignInManager
<nav class="navbar navbar-expand-lg navbar-light" id="mainNav">
    <div class="container px-4 px-lg-5">
        <a class="navbar-brand" href="/">@_config.Value.AppName</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            Menu
            <i class="fas fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ms-auto py-4 py-lg-0">
                <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="@UrlConstants.Home">Home</a></li>
                <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="@UrlConstants.Series">Series</a></li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle px-lg-3 py-3 py-lg-4" href="@UrlConstants.Posts" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Posts
                    </a>
                    <ul class="dropdown-menu">
                        @foreach (var item in Model)
                        {
                            <li><a class="dropdown-item" title="@item.Name" href="@string.Format(UrlConstants.PostsByCategorySlug,item.Slug)">@item.Name</a></li>
                        }
                    </ul>
                </li>
                <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="@UrlConstants.Contact">Contact</a></li>
            </ul>
            <form class="d-flex" role="search">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
            <span class="navbar-text">
                @if (SignInManager.IsSignedIn(User))
                {
                    <a class="btn" href="@UrlConstants.Profile">@User.GetFirstName()</a>
                    <a class="btn" href="@UrlConstants.CreatePost">CreatePost</a>
                }
                else
                {
                    <a class="btn" href="@UrlConstants.Login">Login</a>
                    <a class="btn" href="@UrlConstants.Register">Register</a>
                }
            </span>
        </div>
    </div>
</nav>